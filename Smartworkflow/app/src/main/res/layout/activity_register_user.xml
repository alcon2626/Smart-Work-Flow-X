<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.smartworkflow.RegisterUser">

    <Button
        android:id="@+id/Register_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="11dp"
        android:background="@drawable/adduseronelow"
        android:textAppearance="@style/TextAppearance.Design.Hint" />

    <EditText
        android:id="@+id/UserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/UserPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/Register_button"
        android:layout_toStartOf="@+id/Register_button"
        android:ems="10"
        android:hint="@string/SignupHelpEmail"
        android:inputType="textEmailAddress"
        android:textAppearance="@style/TextAppearance.Design.Hint" />

    <EditText
        android:id="@+id/UserPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Register_button"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="45dp"
        android:ems="10"
        android:hint="@string/SignupHelpPassword"
        android:inputType="textPassword"
        android:textAppearance="@style/TextAppearance.Design.Hint"
        android:layout_alignEnd="@+id/UserEmail" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/splash_icon" />

    <TextView
        android:id="@+id/WelcomeUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView2"
        android:text="@string/SetUpWelcomeUser"
        android:textAppearance="@android:style/TextAppearance.Holo.Medium"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/DisplayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/UserEmail"
        android:layout_alignEnd="@+id/UserEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/UserEmail"
        android:ems="10"
        android:hint="@string/Username"
        android:inputType="textPersonName"
        android:textAppearance="@style/TextAppearance.Design.Hint" />

</RelativeLayout>
